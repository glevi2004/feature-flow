rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user ID
    function getUserId() {
      return request.auth.uid;
    }

    // Users can only read/write their own user document
    match /users/{userId} {
      allow read: if isAuthenticated() && getUserId() == userId;
      allow write: if isAuthenticated() && getUserId() == userId;
    }

    // Company directory - public read
    match /company_directory/{slug} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Companies - public read if portal enabled, authenticated users can read all
    match /companies/{companyId} {
      allow read: if isAuthenticated() || resource.data.publicPortalEnabled == true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Organizations - authenticated users only
    match /organizations/{organizationId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Feedback posts - public read, authenticated create
    match /feedback_posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Feedback comments - public read, authenticated create
    match /feedback_comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Feedback types - public read, authenticated create
    match /feedback_types/{typeId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Feedback tags - public read, authenticated create
    match /feedback_tags/{tagId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Upvotes subcollection
    match /feedback_posts/{postId}/upvotes/{userId} {
      allow read: if true;
      allow write: if isAuthenticated() && getUserId() == userId;
    }
  }
}

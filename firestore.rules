rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Onboarding data - users can only read/write their own onboarding data
    match /onboarding/{onboardingId} {
      allow read, write: if request.auth != null;
    }

    // Feedback posts - allow read for public access, write for authenticated users
    match /feedback_posts/{postId} {
      allow read: if true; // Public read access for feedback portal
      allow write: if request.auth != null; // Authenticated users can create posts
    }

    // Feedback comments - allow read for public access, write for authenticated users
    match /feedback_comments/{commentId} {
      allow read: if true; // Public read access for feedback portal
      allow write: if request.auth != null; // Authenticated users can create comments
    }

    // Feedback types - allow read for public access, write for authenticated users
    match /feedback_types/{typeId} {
      allow read: if true; // Public read access for feedback portal
      allow write: if request.auth != null; // Authenticated users can create types
    }

    // Feedback tags - allow read for public access, write for authenticated users
    match /feedback_tags/{tagId} {
      allow read: if true; // Public read access for feedback portal
      allow write: if request.auth != null; // Authenticated users can create/update/delete tags
    }

    // Companies - allow public read for name checking, write for authenticated users
    match /companies/{companyId} {
      allow read: if true; // Public read access for company name validation during registration
      allow write: if request.auth != null; // Authenticated users can create/update companies
    }
  }
}
